{
    "name": "Better Ponymotes",
    "version": "0.1",
    "manifest version": 2,
    "description": "View Reddit ponymotes across the site",
    "options_page": "options.html",
    "content_scripts": [{
        "matches": ["*://*.reddit.com/*"],
        "run_at": "document_start",
        "js": ["css-support.js"]
    }, {
        "matches": ["*://*.reddit.com/*"],
        "run_at": "document_end",
        "css": ["emote-classes.css", "combiners.css", "misc.css"],
        "js": [
            "jquery-1.7.2.js", "mutation_summary.js",
            "emote-map.js", "betterponymotes.js"
            ]
        }],
    "background": {
        "scripts": ["prefs.js", "background.js"]
        }
}
